<?xml version="1.0"?>
<configuration>
  <appSettings>
    <add key="EnableCaching" value="True" />
  </appSettings>

  <system.serviceModel>
    <services>
      <service name="AdamDotCom.OpenSource.Service.OpenSourceService" behaviorConfiguration="Default">
        <endpoint address="" binding="customBinding" bindingConfiguration="jsonpBinding" contract="AdamDotCom.OpenSource.Service.IOpenSource" behaviorConfiguration="Default" />
      </service>
    </services>
    <behaviors>
      <serviceBehaviors>
        <behavior name="Default">
          <serviceMetadata httpGetEnabled="true" />
        </behavior>
      </serviceBehaviors>
      <endpointBehaviors>
        <behavior name="Default">
          <webHttpWithExceptions />
        </behavior>
      </endpointBehaviors>
    </behaviors>
    <extensions>
      <behaviorExtensions>
        <add name="webHttpWithExceptions" type="AdamDotCom.Common.Service.Infrastructure.WebHttpWithExceptionsElement, AdamDotCom.Common.Service, Version=1.0.0.0, Culture=neutral, PublicKeyToken=null"/>
      </behaviorExtensions>
      <bindingElementExtensions>
        <add name="jsonpMessageEncoding" type="AdamDotCom.Common.Service.Infrastructure.JSONP.JsonpBindingExtension, AdamDotCom.Common.Service, Version=1.0.0.0, Culture=neutral"/>
      </bindingElementExtensions>
    </extensions>
    <bindings>
      <customBinding>
        <binding name="jsonpBinding" >
          <jsonpMessageEncoding />
          <httpTransport manualAddressing="true"/>
        </binding>
      </customBinding>
    </bindings>
  </system.serviceModel>
  <system.web>
    <customErrors mode="Off"/>
    <compilation debug="true">
      <buildProviders>
        <add extension=".svc" type="System.ServiceModel.Activation.ServiceBuildProvider, System.ServiceModel, Version=3.0.0.0, Culture=neutral, PublicKeyToken=b77a5c561934e089"/>
      </buildProviders>
    </compilation>
  </system.web>
</configuration>